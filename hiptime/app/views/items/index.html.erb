
<div class="col-md-10 col-md-offset-1">
<p id="notice"><%= notice %></p>



  <h1 class="text-center">Items</h1>
<table class="table table-hover table-responsive">
  <thead>
  <% if user_signed_in? %>
    <tr>
      <th class="text-center">Title</th>
      <th class="text-center">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.title, item %></td>
        <td><%= item.description %></td>
        <td><%= link_to 'Show', item, class: "btn btn-sm btn-info" %></td>
        <td><%= link_to 'Edit', edit_item_path(item), class: "btn btn-sm btn-success" %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Item', new_item_path, class: "btn btn-success" %>
<% else %>
  <%= render 'welcome_page' %>
<% end %>

<br>


</div>
